@page "/"

<PageTitle>Home</PageTitle>

@if (_hostEnvironment.IsDevelopment())
{
    <AuthorizeView>
        <Authorized>
            <RadzenButton Click="LogOutDummy" Text="Log out"/>
        </Authorized>
        <NotAuthorized>
            <RadzenLabel>Log in 'Administrator' in development.</RadzenLabel>
            <br/>
            <RadzenButton Click="LogInDummy" Text="Log in"/>
        </NotAuthorized>
    </AuthorizeView>
}
