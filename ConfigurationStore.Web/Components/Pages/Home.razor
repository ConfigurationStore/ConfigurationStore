@page "/"

<PageTitle>Login :: Configuration Store</PageTitle>

@if (_hostEnvironment.IsDevelopment())
{
    <AuthorizeView>
        <Authorized>
            <RadzenButton Click="LogOut" Text="Log out"/>
        </Authorized>
        <NotAuthorized>
            <RadzenLabel>Log in 'Administrator' in development.</RadzenLabel>
            <br/>
            <RadzenButton Click="LogInAdministratorInDevelopment" Text="Log in"/>
            <hr/>
            <RadzenLabel>Log in 'Developer' in development.</RadzenLabel>
            <br/>
            <RadzenButton Click="LogInDeveloperInDevelopment" Text="Log in"/>
        </NotAuthorized>
    </AuthorizeView>
}
