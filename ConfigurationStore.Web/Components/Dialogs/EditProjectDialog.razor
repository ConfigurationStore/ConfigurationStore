@using ConfigurationStore.Web.Models
<RadzenTemplateForm TItem="EditProjectDialogModel" Data="Model" Submit="SaveProject" InvalidSubmit="InvalidSubmit">
    <DataAnnotationsValidator />
    <RadzenStack Orientation="Orientation.Vertical">
        <RadzenLabel Component="eProjectName" Text="Project Name:"/>
        <RadzenTextBox Name="eProjectName" @bind-Value="@Model.ProjectName" Placeholder="Enter project name..."/>
        <RadzenDataAnnotationValidator Component="eProjectName"/>

        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End">
            <RadzenButton ButtonStyle="ButtonStyle.Secondary" Text="Cancel" Click="CloseDialog"/>
            <RadzenButton ButtonType="ButtonType.Submit" Text="@Model.AcceptButtonText"/>
        </RadzenStack>
    </RadzenStack>
</RadzenTemplateForm>